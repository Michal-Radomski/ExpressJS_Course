<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="HBS" />
    <meta name="keywords" content="HBS" />
    <meta name="author" content="np. MichRad" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta http-equiv="X-Ua-Compatible" content="IE=edge" />
    <link rel="icon" type="image/png" href="./favicon.png" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <script src="https://cdnjs.cloudflare.com/ajax/libs/less.js/4.1.3/less.min.js" defer></script>
    <link rel="stylesheet/less" type="text/css" href="style.less" />
    <title>NodeJS + HBS</title>
  </head>
  <body>
    <nav class="navbar navbar-default">
      <div class="container-fluid">
        <div class="navbar-header">
          <a class="navbar-brand" href="/">HBS Page</a>
        </div>
        <ul class="nav navbar-nav">
          <li class="active"><a href="/">Home</a></li>
          <li><a href="/about">About</a></li>
        </ul>
      </div>
    </nav>
    <h1 style="color: blue; text-align: center">HBS website</h1>
    <h2>msg: {{msg}}</h2>
    <h3>msg2: {{msg2}}</h3>
    <h4>validated: {{validated}}</h4>
    <h5>Encoded pic with base64: {{{html}}}</h5>
    <h6>Best city in {{country.name}} is <span style="color:red">{{country.bestCity}}</span></h6>

    {{#each countries}}
      {{#if this.western}}
        <li><strong>{{this.name}}</strong> - {{this.capital}}</li>
      {{/if}}
    {{/each}}
  </body>
</html>